{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },

  "rules": {
    "no-console": 1,
    "no-unused-vars": [
      2,
      {
        "args": "all",
        "argsIgnorePattern": "^__",
        "caughtErrors": "none",
        "ignoreRestSiblings": true
      }
    ]
  },

  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
      }
    }
  ]
}
